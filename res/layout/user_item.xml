<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/user_gravatar"
        style="@style/GridImage"
        android:contentDescription="@string/user_gravatar"
        android:src="@drawable/avatar_empty"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/user_gravatar_checkmarck"
        style="@style/GridImage"
        android:contentDescription="@string/user_gravatar_checkmarck"
        android:src="@drawable/avatar_selected"
        android:visibility="invisible" />

   	<TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/user_gravatar"
        android:layout_centerHorizontal="true"
        android:maxLines="2" />

</RelativeLayout>